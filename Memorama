    final int totalCartas = 5;
    ImageIcon cartas[];
    int m_tablero[];
    int score;

    /**
     * Creates new form Principal
     */
    public Principal() {
        initComponents();

        score = 0;

        cartas = new ImageIcon[totalCartas];
        cartas[0] = new ImageIcon("1.jpg");
        cartas[1] = new ImageIcon("2.jpg");
        cartas[2] = new ImageIcon("3.jpg");
        cartas[3] = new ImageIcon("4.jpg");

        cartas[4] = new ImageIcon("imagen.jpg");  //

        m_tablero = new int[(cartas.length - 1) * 2];

        //inicializar el tablero
        inicializar();
        ubicarCartas();

    }

    public void ubicarCartas() {
        //matamos todas las posiciones
        for (int i = 0; i < m_tablero.length; i++) {
            m_tablero[i] = -1;
        }

        //revivimos las posiciones asignandoles una carta
        int cont;
        Random rnd = new Random();
        int index;
        for (int i = 0; i < cartas.length - 1; i++) { //por cada carta
            cont = 0;
            while (cont < 2) {
                index = rnd.nextInt(m_tablero.length);
                if (m_tablero[index] == -1) {
                    m_tablero[index] = i;
                    cont++;
                }
            }
        }

        /*
        //visualizar las cartas:
        btn_carta1.setIcon( cartas[m_tablero[0]]);
        btn_carta2.setIcon( cartas[m_tablero[1]]);
        btn_carta3.setIcon( cartas[m_tablero[2]]);
        
        btn_carta4.setIcon( cartas[m_tablero[3]]);
        btn_carta5.setIcon( cartas[m_tablero[4]]);
        btn_carta6.setIcon( cartas[m_tablero[5]]);
        
        btn_carta7.setIcon( cartas[m_tablero[6]]);
        btn_carta8.setIcon( cartas[m_tablero[7]]);
         */
    }

    public void inicializar() {
        //No se ha seleccionado ninguna carta
        indicesCartas[0] = -1;  //indice de la carta 1       
        indicesCartas[1] = -1;  //indice de la carta 2
        cartasGiradas = 0;

        tempCartas[0] = null; //representa el contenedor de la carta 1
        tempCartas[1] = null; //representa el contenedor de la carta 2

        //Cartas que ya han sido volteadas
        cartasValidadas = new ArrayList<>();

        btn_carta1.setIcon(cartas[totalCartas - 1]);
        btn_carta2.setIcon(cartas[totalCartas - 1]);
        btn_carta3.setIcon(cartas[totalCartas - 1]);

        btn_carta4.setIcon(cartas[totalCartas - 1]);
        btn_carta5.setIcon(cartas[totalCartas - 1]);
        btn_carta6.setIcon(cartas[totalCartas - 1]);

        btn_carta7.setIcon(cartas[totalCartas - 1]);
        btn_carta8.setIcon(cartas[totalCartas - 1]);
        
        btn_carta1.setEnabled(true);
        btn_carta2.setEnabled(true);
        btn_carta3.setEnabled(true);
        btn_carta4.setEnabled(true);
        btn_carta5.setEnabled(true);
        btn_carta6.setEnabled(true);
        btn_carta7.setEnabled(true);
        btn_carta8.setEnabled(true);
        
        ubicarCartas();
    }

