    private void btn_jugarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        inicializar();
        score = 0;

        lb_score.setText(String.valueOf(score));
    }                                         

    int cartasGiradas = 0;
    int indicesCartas[] = new int[2];
    JButton tempCartas[] = new JButton[2];
    ArrayList<Integer> cartasValidadas;


    public void validar(){                    
                if (cartasGiradas == 2) {

                    //Comprobar si las cartas son iguales
                    if (indicesCartas[0] == indicesCartas[1]) {
                        //si lo son:  score ++  las cartas se quitan del juego    
                        cartasValidadas.add(indicesCartas[0]);
                        tempCartas[0].setEnabled(false);
                        tempCartas[1].setEnabled(false);

                        score++;
                        lb_score.setText(String.valueOf(score));

                    } else {
                        //sino; las cartas se regresa a su posici√≥n
                        tempCartas[0].setIcon(cartas[totalCartas - 1]);
                        tempCartas[1].setIcon(cartas[totalCartas - 1]);
                        tempCartas[0] = null;
                        tempCartas[1] = null;
                        
                    }

                    cartasGiradas = 0;
                }
            
    }
    
    private void btn_carta1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        //Voltear carta boca arriba
        if (tempCartas[0] != btn_carta1 && tempCartas[1] != btn_carta1) {
                            
                indicesCartas[cartasGiradas] = m_tablero[0]; //Carta
                tempCartas[cartasGiradas] = btn_carta1; //Contenedor de la carta
                cartasGiradas++;
                              
                new Thread(){
                    @Override
                    public void run(){
                        try{
                        btn_carta1.setIcon(cartas[m_tablero[0]]);            
                        Thread.sleep(500);
                        validar();                                
                        }catch(Exception ex){
                        
                        }
                    }
                }.start();
                
                
            
        }
        else {
            System.out.println("Ya Seleccionada...");
        }

    }                                          

    private void btn_carta2ActionPerformed(java.awt.event.ActionEvent evt) {                                           
