        //Voltear carta boca arriba
        if (tempCartas[0] != btn_carta2 && tempCartas[1] != btn_carta2) {
            
            indicesCartas[cartasGiradas] = m_tablero[1]; //Carta
            tempCartas[cartasGiradas] = btn_carta2; //Contenedor de la carta
